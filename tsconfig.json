{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "types": [
            "core-js",
            "node"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules",
        "web"
    ]
}
